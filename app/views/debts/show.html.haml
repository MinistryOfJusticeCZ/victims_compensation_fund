.attribute
  .label= Claim.model_name.human
  .value= link_to(@debt.claim.file_uid, @debt.claim)
.attribute
  .label= Offender.model_name.human
  .value= @debt.offender.person.fullname
- if @debt.offender.person.natural?
  .attribute
    .label= EgovUtils::NaturalPerson.human_attribute_name('birth_date')
    .value= @debt.offender.person.natural_person.birth_date
.attribute
  .label= Debt.human_attribute_name('value')
  .value= Money.from_amount(@debt.value, @debt.currency_code.upcase).format

.actions.text-center
  = link_to t('label_edit'), edit_debt_path(@debt), class: 'btn btn-secondary'

.redemptions
  %h4= Redemption.model_name.human(count: :other)
